{
  "name": "ervalen-launcher-v6",
  "version": "6.0.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "electron:dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "build:ui": "vite build",
    "build": "vite build && electron-builder"
  },
  "build": {
    "appId": "com.ervalen.launcher",
    "productName": "Ervalen Launcher",
    "files": ["dist/**/*","electron/**/*","config.json","package.json"],
    "directories": { "buildResources": "electron" },
    "publish": [{ "provider": "github", "owner": "MonsieurCandy28", "repo": "ervalen-launcher" }],
    "mac": { "target": "dmg" },
    "win": { "target": "nsis" }
  },
  "dependencies": {
    "axios": "^1.7.2",
    "discord-rpc": "^4.0.1",
    "electron-updater": "^6.1.8",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^31.2.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.40",
    "tailwindcss": "^3.4.9",
    "vite": "^5.4.2",
    "wait-on": "^7.2.0"
  }
}
